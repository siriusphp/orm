{
    "name": "siriusphp/orm",
    "description": "Powerfull and fast PDO-based data mapper",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "orm",
        "datamapper",
        "not-activerecord",
        "pdo",
        "modelling",
        "entity framework",
        "sql",
        "data",
        "mapping"
    ],
    "authors": [
        {
            "name": "Adrian Miu",
            "email": "adrian@adrianmiu.ro"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "atlas/pdo": "^1.1",
        "siriusphp/sql": "^1.2",
        "doctrine/collections": "^1.6",
        "symfony/inflector": "^4.4",
        "league/event": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "^1.3",
        "nette/php-generator": "^3.4",
        "doctrine/dbal": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Sirius\\Orm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sirius\\Orm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": [
            "php phpcs.phar --standard=PSR2 ./src"
        ],
        "cbf": [
            "php phpcbf.phar ./src --standard=PSR2 -w"
        ],
        "csfix": [
            "php php-cs-fixer.phar fix ./src --rules=@PSR2"
        ],
        "build-docs": [
            "php couscous.phar generate --target=build/docs/ ./docs"
        ],
        "docs": [
            "cd docs && php ../couscous.phar preview"
        ],
        "test": [
            "php vendor/bin/phpunit -c phpunit.xml"
        ]
    }
}
